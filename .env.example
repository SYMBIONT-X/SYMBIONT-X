# ============================================================================
# SYMBIONT-X Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it contains secrets!
#
# Usage:
#   cp .env.example .env
#   nano .env  # Fill in your values
# ============================================================================
============================================================================
ENVIRONMENT
============================================================================
ENVIRONMENT=development  # development, staging, production
NODE_ENV=development
DEBUG=true
============================================================================
AZURE CONFIGURATION
============================================================================
Azure Subscription
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_TENANT_ID=your-tenant-id-here
AZURE_RESOURCE_GROUP=rg-symbiontx-dev
Azure Region
AZURE_LOCATION=eastus
============================================================================
AZURE SERVICES
============================================================================
Azure Cosmos DB
COSMOS_ENDPOINT=https://cosmos-symbiontx-dev.documents.azure.com:443/
COSMOS_KEY=your-cosmos-primary-key-here
COSMOS_DATABASE_NAME=symbiontx
COSMOS_CONTAINER_VULNERABILITIES=vulnerabilities
COSMOS_CONTAINER_AGENTS=agents
COSMOS_CONTAINER_DECISIONS=decisions
Azure Key Vault
KEY_VAULT_NAME=kv-symbiontx-dev
KEY_VAULT_URL=https://kv-symbiontx-dev.vault.azure.net/
Azure Container Apps
CONTAINER_APPS_ENVIRONMENT=cae-symbiontx-dev
SECURITY_SCANNER_APP_NAME=security-scanner-agent
RISK_ASSESSMENT_APP_NAME=risk-assessment-agent
ORCHESTRATOR_APP_NAME=orchestrator-agent
Azure Container Registry
CONTAINER_REGISTRY_NAME=acrsymbiontxdev
CONTAINER_REGISTRY_URL=acrsymbiontxdev.azurecr.io
Azure Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key-here;IngestionEndpoint=https://eastus-8.in.applicationinsights.azure.com/
APPINSIGHTS_INSTRUMENTATION_KEY=your-instrumentation-key-here
Azure Service Bus
SERVICE_BUS_CONNECTION_STRING=Endpoint=sb://sb-symbiontx-dev.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your-key-here
SERVICE_BUS_QUEUE_REMEDIATION=remediation-requests
Azure Static Web Apps
STATIC_WEB_APP_NAME=swa-symbiontx-dev
STATIC_WEB_APP_URL=https://nice-wave-12345.azurestaticapps.net
============================================================================
GITHUB INTEGRATION
============================================================================
GitHub Personal Access Token (PAT)
Required scopes: repo, read:org, workflow
GITHUB_TOKEN=ghp_your_personal_access_token_here
GitHub Webhook Secret
GITHUB_WEBHOOK_SECRET=your-webhook-secret-here
GitHub App Configuration (if using GitHub App instead of PAT)
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY_PATH=
GITHUB_APP_INSTALLATION_ID=
Repository Configuration
GITHUB_ORGANIZATION=SYMBIONT-X
GITHUB_REPOSITORY=SYMBIONT-X
============================================================================
MICROSOFT FOUNDRY (AI Models)
============================================================================
Microsoft Foundry API
FOUNDRY_API_ENDPOINT=https://foundry.microsoft.com/api/v1
FOUNDRY_API_KEY=your-foundry-api-key-here
Model Configuration
FOUNDRY_MODEL_NAME=gpt-4-32k
FOUNDRY_MODEL_TEMPERATURE=0.3
FOUNDRY_MODEL_MAX_TOKENS=1024
============================================================================
GITHUB COPILOT
============================================================================
GitHub Copilot API
COPILOT_API_ENDPOINT=https://api.githubcopilot.com
COPILOT_API_KEY=your-copilot-api-key-here
Copilot Configuration
COPILOT_MODEL_NAME=gpt-4
COPILOT_TEMPERATURE=0.2
COPILOT_MAX_TOKENS=2000
============================================================================
MCP (MODEL CONTEXT PROTOCOL)
============================================================================
MCP Server Configuration
MCP_SERVER_URL=https://mcp.internal:9000
MCP_SERVER_API_KEY=your-mcp-api-key-here
MCP_PROTOCOL_VERSION=1.0
============================================================================
EXTERNAL APIs
============================================================================
National Vulnerability Database (NVD)
NVD_API_KEY=your-nvd-api-key-here
NVD_API_ENDPOINT=https://services.nvd.nist.gov/rest/json/cves/2.0
Azure Security Center
AZURE_SECURITY_CENTER_API_VERSION=2023-01-01
============================================================================
SECURITY SCANNER CONFIGURATION
============================================================================
Scanner Settings
SCANNER_TIMEOUT_SECONDS=300
SCANNER_MAX_CONCURRENT_SCANS=5
SCANNER_ENABLE_DEPENDENCY_SCAN=true
SCANNER_ENABLE_SECRET_SCAN=true
SCANNER_ENABLE_CONTAINER_SCAN=true
SCANNER_ENABLE_IAC_SCAN=true
Tool Versions
TRIVY_VERSION=latest
SAFETY_VERSION=latest
============================================================================
RISK ASSESSMENT CONFIGURATION
============================================================================
Risk Assessment Settings
RISK_ASSESSMENT_TIMEOUT_SECONDS=30
RISK_ASSESSMENT_CACHE_TTL_SECONDS=3600
RISK_ASSESSMENT_MIN_CONFIDENCE=0.7
Priority Thresholds
PRIORITY_P0_THRESHOLD=9.0
PRIORITY_P1_THRESHOLD=7.0
PRIORITY_P2_THRESHOLD=4.0
============================================================================
AUTO-REMEDIATION CONFIGURATION
============================================================================
Remediation Settings
AUTO_REMEDIATION_ENABLED=true
AUTO_REMEDIATION_TIMEOUT_SECONDS=300
AUTO_REMEDIATION_MAX_RETRIES=3
AUTO_REMEDIATION_REQUIRE_TESTS=true
Human Approval Settings
REQUIRE_HUMAN_APPROVAL_FOR_CRITICAL=true
REQUIRE_HUMAN_APPROVAL_FOR_AUTH=true
APPROVAL_TIMEOUT_HOURS=24
============================================================================
ORCHESTRATOR CONFIGURATION
============================================================================
Orchestrator Settings
ORCHESTRATOR_PORT=8080
ORCHESTRATOR_GRPC_PORT=8081
ORCHESTRATOR_METRICS_PORT=8082
Circuit Breaker Settings
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_TIMEOUT_SECONDS=60
CIRCUIT_BREAKER_RETRY_TIMEOUT_SECONDS=30
============================================================================
FRONTEND CONFIGURATION
============================================================================
API Endpoints
VITE_API_BASE_URL=http://localhost:8080/api/v1
VITE_WEBSOCKET_URL=ws://localhost:8080/ws
Authentication
VITE_AZURE_AD_CLIENT_ID=your-azure-ad-client-id-here
VITE_AZURE_AD_TENANT_ID=your-azure-ad-tenant-id-here
VITE_AZURE_AD_REDIRECT_URI=http://localhost:5173
Feature Flags
VITE_ENABLE_WEBSOCKETS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=true
============================================================================
DATABASE CONFIGURATION
============================================================================
Cosmos DB Settings
COSMOS_CONSISTENCY_LEVEL=Session
COSMOS_MAX_RETRY_ATTEMPTS=3
COSMOS_MAX_RETRY_WAIT_TIME_SECONDS=30
Connection Pool
COSMOS_MAX_CONNECTIONS=100
COSMOS_CONNECTION_TIMEOUT_SECONDS=30
============================================================================
OBSERVABILITY
============================================================================
Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json, text
LOG_OUTPUT=stdout  # stdout, file
OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=https://eastus-8.in.applicationinsights.azure.com/
OTEL_SERVICE_NAME=symbiontx
OTEL_TRACES_SAMPLER=parentbased_traceidratio
OTEL_TRACES_SAMPLER_ARG=0.1  # 10% sampling in production
Metrics
ENABLE_PROMETHEUS_METRICS=true
PROMETHEUS_PORT=8082
============================================================================
PERFORMANCE & SCALING
============================================================================
Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
Caching
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000
Worker Configuration
WORKER_CONCURRENCY=4
WORKER_MAX_TASKS_PER_CHILD=1000
============================================================================
TESTING
============================================================================
Test Database (use separate Cosmos DB for testing)
TEST_COSMOS_ENDPOINT=https://cosmos-symbiontx-test.documents.azure.com:443/
TEST_COSMOS_KEY=your-test-cosmos-key-here
Test Settings
RUN_INTEGRATION_TESTS=false
RUN_E2E_TESTS=false
TEST_TIMEOUT_SECONDS=300
============================================================================
DEVELOPMENT TOOLS
============================================================================
Hot Reload
ENABLE_HOT_RELOAD=true
Debug Tools
ENABLE_DEBUG_TOOLBAR=true
ENABLE_PROFILING=false
============================================================================
NOTIFICATIONS
============================================================================
Slack Webhook (for alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
Email Configuration (if using)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM_ADDRESS=alerts@symbiontx.io
EMAIL_USERNAME=your-email@example.com
EMAIL_PASSWORD=your-email-app-password
============================================================================
COST MANAGEMENT
============================================================================
Budget Alerts
AZURE_DAILY_BUDGET_USD=50
ALERT_ON_BUDGET_THRESHOLD=0.8
============================================================================
FEATURE FLAGS
============================================================================
Enable/Disable Features
FEATURE_MULTI_AGENT_MODE=true
FEATURE_AI_RISK_ASSESSMENT=true
FEATURE_AUTO_REMEDIATION=true
FEATURE_HUMAN_IN_LOOP=true
FEATURE_CONTAINER_SCANNING=true
FEATURE_IAC_SCANNING=true
============================================================================
COMPLIANCE & SECURITY
============================================================================
Security Headers
ENABLE_CORS=true
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://*.azurestaticapps.net
ENABLE_CSRF_PROTECTION=true
Audit Logging
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=365
============================================================================
CUSTOM CONFIGURATION
============================================================================
Add your custom environment variables below
MY_CUSTOM_VARIABLE=value
============================================================================
END OF CONFIGURATION
============================================================================
